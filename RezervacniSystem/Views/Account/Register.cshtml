@model HotelRezervacniSystem.Models.Account.RegisterViewModel
@{
    ViewData["Title"] = "Registrace";
}
<section class="hero-section hero-subpage">
    <div class="background">
        <img src="~/Images/Reservation.jpg" alt="Hotel Aurelia">
    </div>
</section>
<section class="form-section container py-2">
    <h2 class="text-center mb-4">Vytvoření účtu</h2>
    <div class="form-card mx-auto">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>
        <form asp-action="Register" asp-controller="Account" method="post">
            <label for="email">Email:</label>
            <input asp-for="Email" type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>

            <label for="password">Heslo:</label>
            <input asp-for="Password" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>

            <label for="confirmPassword">Potvrzení hesla:</label>
            <input asp-for="ConfirmPassword" type="password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

            <button type="submit" class="btn btn-form-submit mt-3">Registrovat se</button>
        </form>
    </div>
</section>
